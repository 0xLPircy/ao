{
  "name": "@permaweb/ao-loader",
  "version": "0.0.13",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:src && npm run copy:worker",
    "build:src": "node esbuild.js",
    "build:types": "tsc src/main.js --declaration --allowJs --emitDeclarationOnly --outDir dist",
    "copy:worker": "cp ./src/worker.js ./dist/ && cp ./src/wasm.cjs ./dist/",
    "test": "npm run build && node --test",
    "test:integration": "npm run build && MODULE_PATH='../dist/index.cjs' node --test"
  },
  "dependencies": {
    "wasm-metering": "^0.2.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}
